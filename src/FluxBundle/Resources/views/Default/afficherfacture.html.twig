<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

<!------ Include the above in your HEAD tag ---------->

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body p-0">
                    <div class="row p-5">
                        <div class="col-md-6">
                            <img src="{{asset('dashboard/assets/img/logo.png')}}" style="width: 100px ;height: 100px">
                        </div>

                        <div class="col-md-6 text-right">
                            <h4> <p class="font-weight-bold mb-15">FACTURE</p> </h4>
                            <div class="row">
                                <p class="text-muted">Réf commande: {{commande.id}}</p>
                            </div>
                            <p class="text-muted">{{commande.dateCommande|date('Y-m-d')}}</p>
                        </div>
                    </div>

                    <hr class="my-5">

                    <div class="row pb-5 p-5">
                        <div class="col-md-6">
                            <p class="font-weight-bold mb-4">Informations Client</p>

                            <div class="row" style="margin-left: 1px;">
                                <p class="mb-1" style="margin-right: 5px;">Nom: {{commande.idUser ? commande.idUser.nom}}</p>
                                <p class="mb-1">Prénom: {{commande.idUser ? commande.idUser.prenom}}</p>
                            </div>
                            <p class="mb-1">Adresse email: {{commande.idUser ? commande.idUser.email}}</p>
                            <p class="mb-1">Matricule fiscale: {{commande.idUser ? commande.idUser.MatFiscal}}</p>
                        </div>
                    </div>

                    <div class="row p-5">
                        <div class="col-md-12">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th class="border-0 text-uppercase small font-weight-bold">ID</th>
                                    <th class="border-0 text-uppercase small font-weight-bold">Article</th>
                                    <th class="border-0 text-uppercase small font-weight-bold">Description</th>
                                    <th class="border-0 text-uppercase small font-weight-bold">Quantité</th>
                                    <th class="border-0 text-uppercase small font-weight-bold">Prix unitaire</th>
                                    <th class="border-0 text-uppercase small font-weight-bold">Prix Total</th>
                                </tr>
                                </thead>

                                <tbody>
                                {% for lignecommande in lignecommandes%}
                                    <tr>
                                        <td>
                                            {{lignecommande.id}}
                                        </td>
                                        <td>
                                            {{lignecommande.idProduit ? lignecommande.idProduit.name}}
                                        </td>
                                        <td>
                                            {{lignecommande.idProduit ? lignecommande.idProduit.description}}
                                        </td>
                                        <td>
                                            {{lignecommande.quntite}}
                                        </td>
                                        <td>
                                            {{lignecommande.idProduit ? lignecommande.idProduit.price}}
                                        </td>
                                        <td>
                                            {{lignecommande.idProduit ? lignecommande.idProduit.price * lignecommande.quntite}}
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>

                            </table>
                        </div>
                    </div>

                    <div class="d-flex flex-row-reverse bg-dark text-white p-4">
                        <div class="py-3 px-5 text-right">
                            <div class="mb-2">Grand Total</div>

                            <div class="h2 font-weight-light"><p class="mb-1">{{commande.summe}}</p></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>


