{% extends 'dashboard_base.html.twig' %}
{% block onglet %}Statistiques{% endblock %}
{% block titre %}Debo - Flux{% endblock %}
{% block body %}
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <div class="content">
        <h4 class="card-title">Statistiques</h4>
        <div class="row">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title" style="font-size: 18px">Nature de transactions</h4>
                    </div>
                    <div class="card-body">
                        <div id="div_chart"></div>
                        <script type="text/javascript">
                            {{ gc_draw(piechart, 'div_chart') }}
                        </script>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title" style="font-size: 18px">Nombre de transactions</h4>
                    </div>
                    <div class="card-body">
                        <div id="div_histogram"></div>
                        <script type="text/javascript">
                            {{ gc_draw(histogram, 'div_histogram') }}
                        </script>
                    </div>
                </div>
            </div>


        </div>
    </div>

{% endblock %}