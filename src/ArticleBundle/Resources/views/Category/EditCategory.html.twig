{% extends "dashboard_base.html.twig" %}

{% block title %}Add Category{% endblock %}

{% block body %}

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Create Category</h3>
                </div>
                <div class="card-body">

                    {{ form_start(form) }}
                    <div class="col-md-12">

                        <div class="card-body">
                            <form>
                                <div class="row">
                                    <div class="col-md-5 pr-1">
                                        <div class="form-group">
                                            <label>Category Label </label>
                                            {{ form_widget(form.label, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="update ml-auto mr-auto" style="
    position: absolute;
    right: 145px;
">
                                            <br><br><br>
                                            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary btn-round'}}) }}
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>


                        {{ form_end(form) }}
                    </div>
                </div>
            </div>

        </div>

        {% endblock %}
