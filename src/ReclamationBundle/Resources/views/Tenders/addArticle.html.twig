{% extends "dashboard_base.html.twig" %}

{% block title %}Create Tender{% endblock %}
{% block onglet %}Tenders{% endblock %}

{% block body %}

    <div class="content">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Add Article</h3>
                </div>
                <div class="card-body">
                    <div class="card-body">
                        {% if articles is not empty  %}
                            <div class="table-responsive">
                                <form action="{{ path('article_add', { 'idArticle': article.idArticle, 'id': id })}}" method="post">
                                <table class="table" >
                                    <thead class=" text-primary">
                                    <th>Id</th>
                                    <th>Articles in Stock</th>
                                    <th>Quantity</th>
                                    <th>Recommanded Stock</th>
                                    </thead>
                                    <tbody>
                                    {% for article in articles %}
                                        {% if article.quantity<100 %}
                                            <tr>
                                                <td >{{ article.idArticle }}</td>
                                                <td>{{ article.name }}</td>
                                                <td>{{ article.quantity }}</td>
                                                <td><input type="number" name="stock"> </td>
                                                <td><input type="submit" class="btn btn-default" value="ajouter"/></td>
                                            </tr>
                                        {% endif %}
                                    {% endfor %}
                                    </tbody>
                                </table>
                                </form>
                            </div>
                        {% else %}
                            <p>No article found.</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
