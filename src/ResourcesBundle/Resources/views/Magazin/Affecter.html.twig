 {% extends "dashboard_base.html.twig" %}

    {% block title %}Update Magazin{% endblock %}

    {% block body %}

        <div class="content">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">affect Magazin:</h3>
                        </div>
                        <div class="card-body">


                            <div class="col-md-12">
                                <div class="card card-user">

                                    <div class="card-body">
                                        <form action="{{ path('ajoutMagazinier',{ 'id_mag' : magazin.idMag }) }}", method="post">
                                            <div class="row">
                                                <div class="col-md-5 pr-1">
                                                    <div class="form-group">
                                                        <label>idMagazzin</label>
                                                        <input type="Text" name="id_mag"  value={{ magazin.idMag }} disabled="true"/>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                <div class="form-group">
                                                    <label>magazinier</label>
                                                    <select class="form-control" name="magazinier">
                                                        {% for magazinier in magazinier %}

                                                            <option value={{magazinier.id}}>{{ magazinier.nom }} {{ magazinier.prenom }}</option>

                                                        {% endfor %}
                                                    </select>
                                                </div>
                                                <input type="submit" class="btn btn-success" value="Ajouter" style="position: absolute; bottom: 10px;"/>




                                                </div>

                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>
                </div>
            </div>

        </div>

    {% endblock %}
