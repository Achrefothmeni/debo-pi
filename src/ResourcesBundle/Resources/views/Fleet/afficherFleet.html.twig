{% extends 'dashboard_base.html.twig' %}
    {% block onglet %}Flottes{% endblock %}

    {% block body %}
        <div class="content">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Liste des Flottes</h4>
                        </div>
                        <div class="card-header">
                            <h6 class="card-title"><a href="{{ path('ajouterFleet') }}" style="color:#0000F0">Ajouter Flotte</a></h6>
                        </div>
                        <div class="card-header">
                            <h6 class="card-title"><a href="{{ path('rechercherFleet') }}" style="color:#0000F0">Rechercher Flotte</a></h6>
                        </div>

                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead class=" text-primary">
                                    <th>matriculation</th>
                                    <th>capacit√©</th>
                                    <th>nature</th>
                                    <th>categorie</th>

                                    <th>date de mise en circulation</th>
                                    <th>images</th>
                                    <th>modifier</th>
                                    <th>supprimer</th>

                                    </thead>
                                    <tbody>
                                    {% for f in fleet %}
                                        <tr>
                                            <td>{{ f.matriculation }}</td>
                                            <td>{{ f.capacity }}</td>
                                            <td>{{ f.nature.libelle }}</td>
                                            <td>{{ f.category.label }}</td>
                                            <td>{{ f.date|date('Y-m-d') }}</td>
                                            <td><img src="{{ asset('images/' ~ f.image) }}" alt="" width="90px"></td>
                                            <td><a href="{{ path('fleet_modif',{ 'matriculation' : f.matriculation }) }}" style="color:#00ad5f">modifier</a></td>
                                            <td><a href="{{ path('fleet_supp',{ 'matriculation' : f.matriculation }) }}" style="color:#FF0000">supprimer</a></td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    {% endblock %}
